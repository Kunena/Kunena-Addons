<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>mod_kunenastats</name>
	<version>5.0.2</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<build>@kunenaversionbuild@</build>
	<author>Kunena Team</author>
	<authorEmail>admin@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(C) 2008 - 2016 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<description>MOD_KUNENASTATS_DESCRIPTION</description>

	<scriptfile>install.script.php</scriptfile>
	<files>
		<filename module="mod_kunenastats">mod_kunenastats.php</filename>
		<filename>index.html</filename>
		<filename>class.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>

	<languages folder="language">
		<!-- Transifex alphabetical order -->
		<language tag="en-GB">en-GB/en-GB.mod_kunenastats.ini</language>
		<language tag="bg-BG">bg-BG/bg-BG.mod_kunenastats.ini</language>
		<language tag="ca-ES">ca-ES/ca-ES.mod_kunenastats.ini</language>
		<language tag="zh-CN">zh-CN/zh-CN.mod_kunenastats.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.mod_kunenastats.ini</language>
		<language tag="da-DK">da-DK/da-DK.mod_kunenastats.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_kunenastats.ini</language>
		<language tag="et-EE">et-EE/et-EE.mod_kunenastats.ini</language>
		<language tag="fi-FI">fi-FI/fi-FI.mod_kunenastats.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_kunenastats.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_kunenastats.ini</language>
		<language tag="el-GR">el-GR/el-GR.mod_kunenastats.ini</language>
		<language tag="he-IL">he-IL/he-IL.mod_kunenastats.ini</language>
		<language tag="hu-HU">hu-HU/hu-HU.mod_kunenastats.ini</language>
		<language tag="it-IT">it-IT/it-IT.mod_kunenastats.ini</language>
		<language tag="kz-KZ">kz-KZ/kz-KZ.mod_kunenastats.ini</language>
		<language tag="lt-LT">lt-LT/lt-LT.mod_kunenastats.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.mod_kunenastats.ini</language>
		<language tag="fa-IR">fa-IR/fa-IR.mod_kunenastats.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.mod_kunenastats.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_kunenastats.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_kunenastats.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.mod_kunenastats.ini</language>
		<language tag="th-TH">th-TH/th-TH.mod_kunenastats.ini</language>
		<language tag="ug-CN">ug-CN/ug-CN.mod_kunenastats.ini</language>
		<language tag="vi-VN">vi-VN/vi-VN.mod_kunenastats.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="type" type="list" default="general" label="MOD_KUNENASTATS_PARAMSTATSTYPE"
				       description="MOD_KUNENASTATS_PARAMSTATSTYPE_DESC">
					<option value="general">MOD_KUNENASTATS_GENERALSTATS</option>
					<option value="topics">MOD_KUNENASTATS_TOPTOPICS</option>
					<option value="posters">MOD_KUNENASTATS_TOPPOSTERS</option>
					<option value="profiles">MOD_KUNENASTATS_TOPPROFILES</option>
					<option value="polls">MOD_KUNENASTATS_TOPPOLLS</option>
					<option value="thanks">MOD_KUNENASTATS_TOPTHANKS</option>
				</field>
				<field name="items" type="text" default="5" label="MOD_KUNENASTATS_PARAMNBITEMS" description="MOD_KUNENASTATS_PARAMNBITEMS_DESC"/>
				<field name="titlelength" type="text" default="50" label="MOD_KUNENASTATS_PARAM_TITLELENGTH"
				       description="MOD_KUNENASTATS_PARAM_TITLELENGTH_DESC"/>
				<field name="sh_statslink" type="radio" default="0" label="MOD_KUNENASTATS_PARAMSHOWSTATSLINK"
				       description="MOD_KUNENASTATS_PARAMSHOWSTATSLINK_DESC">
					<option value="0">MOD_KUNENASTATS_PARAM_VALUE_HIDE</option>
					<option value="1">MOD_KUNENASTATS_PARAM_VALUE_SHOW</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

				<field
					name="owncache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL
					</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING
					</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="180"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
