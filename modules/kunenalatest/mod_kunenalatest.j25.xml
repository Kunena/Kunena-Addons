					<option value="1">MOD_KUNENALATEST_PARAM_VALUE_YES</option>
					<option value="0">MOD_KUNENALATEST_PARAM_VALUE_NO</option>
				</field>
				<field name="moduleclass_sfx" type="text" default="" description="MOD_KUNENALATEST_PARAM_MODULECLASSSUFFIX_DESC" label="MOD_KUNENALATEST_PARAM_MODULECLASSSUFFIX" />
