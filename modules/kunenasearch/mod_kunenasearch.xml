<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension type="module" version="2.5.0" client="site" method="upgrade">
	<name>mod_kunenasearch</name>
	<version>3.0.0</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>admin@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(C) 2008 - 2013 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<description>MOD_KUNENASEARCH_DESCRIPTION</description>

	<scriptfile>install.script.php</scriptfile>
	<files>
		<filename module="mod_kunenasearch">mod_kunenasearch.php</filename>
		<filename>class.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>

	<languages folder="language">
		<!-- Transifex alphabetical order -->
		<language tag="en-GB">en-GB/en-GB.mod_kunenasearch.ini</language>
		<language tag="bg-BG">bg-BG/bg-BG.mod_kunenasearch.ini</language>
		<language tag="ca-ES">ca-ES/ca-ES.mod_kunenasearch.ini</language>
		<language tag="zh-CN">zh-CN/zh-CN.mod_kunenasearch.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.mod_kunenasearch.ini</language>
		<language tag="da-DK">da-DK/da-DK.mod_kunenasearch.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_kunenasearch.ini</language>
		<language tag="et-EE">et-EE/et-EE.mod_kunenasearch.ini</language>
		<language tag="fi-FI">fi-FI/fi-FI.mod_kunenasearch.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_kunenasearch.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_kunenasearch.ini</language>
		<language tag="el-GR">el-GR/el-GR.mod_kunenasearch.ini</language>
		<language tag="he-IL">he-IL/he-IL.mod_kunenasearch.ini</language>
		<language tag="hu-HU">hu-HU/hu-HU.mod_kunenasearch.ini</language>
		<language tag="it-IT">it-IT/it-IT.mod_kunenasearch.ini</language>
		<language tag="kz-KZ">kz-KZ/kz-KZ.mod_kunenasearch.ini</language>
		<language tag="lt-LT">lt-LT/lt-LT.mod_kunenasearch.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.mod_kunenasearch.ini</language>
		<language tag="fa-IR">fa-IR/fa-IR.mod_kunenasearch.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.mod_kunenasearch.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_kunenasearch.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_kunenasearch.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.mod_kunenasearch.ini</language>
		<language tag="th-TH">th-TH/th-TH.mod_kunenasearch.ini</language>
		<language tag="ug-CN">ug-CN/ug-CN.mod_kunenasearch.ini</language>
		<language tag="vi-VN">vi-VN/vi-VN.mod_kunenasearch.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="ksearch_width" type="text" default="20" label="MOD_KUNENASEARCH_BOX_WIDTH" description="MOD_KUNENASEARCH_BOX_WIDTH_DESC" />
				<field name="ksearch_txt" type="text" default="" label="MOD_KUNENASEARCH_PARAMTEXT" description="MOD_KUNENASEARCH_PARAMTEXT_DESC" />
				<field name="ksearch_button" type="radio" default="" label="MOD_KUNENASEARCH_SEARCHBUTTON" description="MOD_KUNENASEARCH_SEARCHBUTTON_DESC">
					<option value="">MOD_KUNENASEARCH_HIDE</option>
					<option value="1">MOD_KUNENASEARCH_SHOW</option>
				</field>
				<field name="ksearch_button_pos" type="list" default="right" label="MOD_KUNENASEARCH_SEARCHBUTTON_POSITION" description="MOD_KUNENASEARCH_SEARCHBUTTON_POSITION_DESC">
					<option value="right">MOD_KUNENASEARCH_RIGHT</option>
					<option value="bottom">MOD_KUNENASEARCH_BOTTOM</option>
				</field>
				<field name="ksearch_button_txt" type="text" default="Search" label="MOD_KUNENASEARCH_SEARCHBUTTON_TEXT" description="MOD_KUNENASEARCH_SEARCHBUTTON_TEXT_DESC" />
			</fieldset>

			<fieldset name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
						name="owncache"
						type="list"
						default="1"
						label="COM_MODULES_FIELD_CACHING_LABEL"
						description="COM_MODULES_FIELD_CACHING_DESC">
					<option
							value="1">JGLOBAL_USE_GLOBAL</option>
					<option
							value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
						name="cache_time"
						type="text"
						default="180"
						label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
						description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
