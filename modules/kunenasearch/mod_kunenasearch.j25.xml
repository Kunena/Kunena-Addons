<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension type="module" version="2.5.0" client="site" method="upgrade">
	<name>mod_kunenasearch</name>
	<version>@kunenaversion@</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>admin@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(C) 2008 - 2012 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<description>MOD_KUNENASEARCH_DESCRIPTION</description>
	
	<scriptfile>install.script.php</scriptfile>
	<files>
		<filename module="mod_kunenasearch">mod_kunenasearch.php</filename>
		<filename>class.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="ksearch_width" type="text" default="20" label="MOD_KUNENASEARCH_BOX_WIDTH" description="MOD_KUNENASEARCH_BOX_WIDTH_DESC" />
				<field name="ksearch_txt" type="text" default="" label="MOD_KUNENASEARCH_PARAMTEXT" description="MOD_KUNENASEARCH_PARAMTEXT_DESC" />
				<field name="ksearch_button" type="radio" default="" label="MOD_KUNENASEARCH_SEARCHBUTTON" description="MOD_KUNENASEARCH_SEARCHBUTTON_DESC">
					<option value="">MOD_KUNENASEARCH_HIDE</option>
					<option value="1">MOD_KUNENASEARCH_SHOW</option>
				</field>
				<field name="ksearch_button_pos" type="list" default="right" label="MOD_KUNENASEARCH_SEARCHBUTTON_POSITION" description="MOD_KUNENASEARCH_SEARCHBUTTON_POSITION_DESC">
					<option value="right">MOD_KUNENASEARCH_RIGHT</option>
					<option value="bottom">MOD_KUNENASEARCH_BOTTOM</option>
				</field>
				<field name="ksearch_button_txt" type="text" default="Search" label="MOD_KUNENASEARCH_SEARCHBUTTON_TEXT" description="MOD_KUNENASEARCH_SEARCHBUTTON_TEXT_DESC" />
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="moduleclass_sfx" type="text" default="" label="MOD_KUNENASEARCH_PARAMMODULECLASSSUFFIX" description="MOD_KUNENASEARCH_PARAMMODULECLASSSUFFIX_DESC" />
			</fieldset>
				
			<fieldset group="advanced">
				<field name="cache" type="list" default="1" label="MOD_KUNENASEARCH_CACHING" description="MOD_KUNENASEARCH_CACHING_DESC">
					<option value="1">MOD_KUNENASEARCH_CACHING_GLOBAL</option>
					<option value="0">MOD_KUNENASEARCH_CACHING_DISABLED</option>
				</field>
				<field name="cache_time" type="text" default="900" label="MOD_KUNENASEARCH_CACHING_TIME" description="MOD_KUNENASEARCH_CACHING_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
