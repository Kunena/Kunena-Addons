<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install version="1.5" type="plugin" group="community" method="upgrade">
	<name>My Forum Posts</name>
	<version>2.0.0-RC2</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>admin@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(C) 2008 - 2012 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<isapplication>true</isapplication>
	<isbrowseable>true</isbrowseable>
	<description>PLG_COMMUNITY_MYKUNENA_DESCRIPTION</description>
	<languages folder="language">
		<!-- Transifex alphabetical order -->
		<language tag="en-GB">en-GB/en-GB.plg_community_mykunena.ini</language>
		<language tag="bg-BG">bg-BG/bg-BG.plg_community_mykunena.ini</language>
		<language tag="ca-ES">ca-ES/ca-ES.plg_community_mykunena.ini</language>
		<language tag="zh-CN">zh-CN/zh-CN.plg_community_mykunena.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.plg_community_mykunena.ini</language>
		<language tag="da-DK">da-DK/da-DK.plg_community_mykunena.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_community_mykunena.ini</language>
		<language tag="et-EE">et-EE/et-EE.plg_community_mykunena.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_community_mykunena.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_community_mykunena.ini</language>
		<language tag="el-GR">el-GR/el-GR.plg_community_mykunena.ini</language>
		<language tag="he-IL">he-IL/he-IL.plg_community_mykunena.ini</language>
		<language tag="hu-HU">hu-HU/hu-HU.plg_community_mykunena.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_community_mykunena.ini</language>
		<language tag="kz-KZ">kz-KZ/kz-KZ.plg_community_mykunena.ini</language>
		<language tag="lv-LV">lv-LV/lv-LV.plg_community_mykunena.ini</language>
		<language tag="lt-LT">lt-LT/lt-LT.plg_community_mykunena.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.plg_community_mykunena.ini</language>
		<language tag="fa-IR">fa-IR/fa-IR.plg_community_mykunena.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.plg_community_mykunena.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_community_mykunena.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_community_mykunena.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.plg_community_mykunena.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_community_mykunena.ini</language>
		<language tag="ug-CN">ug-CN/ug-CN.plg_community_mykunena.ini</language>
		<language tag="vi-VN">vi-VN/vi-VN.plg_community_mykunena.ini</language>
	</languages>
	<files>
		<file plugin="mykunena">mykunena.php</file>
		<folder>mykunena</folder>
	</files>
	
	<params>
		<param name="count" type="text" default="5" label="PLG_COMMUNITY_MYKUNENA_POST_COUNT" description="PLG_COMMUNITY_MYKUNENA_POST_COUNT_DESC" />
		<param name="coreapp" type="list" default="0" label="PLG_COMMUNITY_MYKUNENA_CORE_APPS" description="PLG_COMMUNITY_MYKUNENA_CORE_APPS_DESC">
			<option value="0">PLG_COMMUNITY_MYKUNENA_CORE_APPS_NO</option>
			<option value="1">PLG_COMMUNITY_MYKUNENA_CORE_APPS_YES</option>
		</param>
		<param name="cache" type="list" default="1" label="PLG_COMMUNITY_MYKUNENA_CACHING" description="PLG_COMMUNITY_MYKUNENA_CACHING_DESC">
			<option value="1">PLG_COMMUNITY_MYKUNENA_CACHING_GLOBAL</option>
			<option value="0">PLG_COMMUNITY_MYKUNENA_CORE_APPS_NO</option>
		</param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">	
				<field name="count" type="text"
					default="5"
					description="PLG_COMMUNITY_MYKUNENA_POST_COUNT_DESC"
					label="PLG_COMMUNITY_MYKUNENA_POST_COUNT" />
				<field name="coreapp" type="list" default="0" description="PLG_COMMUNITY_MYKUNENA_CORE_APPS_DESC" label="PLG_COMMUNITY_MYKUNENA_CORE_APPS">
					<option value="0">PLG_COMMUNITY_MYKUNENA_CORE_APPS_NO</option>
					<option value="1">PLG_COMMUNITY_MYKUNENA_CORE_APPS_YES</option>
				</field>
				<field name="cache"  type="list" default="1" label="PLG_COMMUNITY_MYKUNENA_CACHING" description="PLG_COMMUNITY_MYKUNENA_CACHING_DESC">
					<option value="1">PLG_COMMUNITY_MYKUNENA_CACHING_GLOBAL</option>
					<option value="0">PLG_COMMUNITY_MYKUNENA_CORE_APPS_NO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</install>