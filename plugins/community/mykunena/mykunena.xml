		<language tag="ca-ES">ca-ES.plg_community_mykunena.ini</language>
		<language tag="zh-CN">zh-CN.plg_community_mykunena.ini</language>
		<language tag="zh-TW">zh-TW.plg_community_mykunena.ini</language>
		<!--language tag="hr-HR">hr-HR.plg_community_mykunena.ini</language-->
		<!--language tag="da-DK">da-DK.plg_community_mykunena.ini</language-->
		<language tag="nl-NL">nl-NL.plg_community_mykunena.ini</language>
		<language tag="et-EE">et-EE.plg_community_mykunena.ini</language>
		<!--language tag="fi-FI">fi-FI.plg_community_mykunena.ini</language-->
		<language tag="fr-FR">fr-FR.plg_community_mykunena.ini</language>
