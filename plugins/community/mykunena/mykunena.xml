		<language tag="it-IT">it-IT.plg_community_mykunena.ini</language>
		<language tag="kz-KZ">kz-KZ.plg_community_mykunena.ini</language>
		<!--language tag="km-KH">km-KH.plg_community_mykunena.ini</language-->
		<language tag="lt-LT">lt-LT.plg_community_mykunena.ini</language>
