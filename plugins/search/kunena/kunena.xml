		<language tag="ru-RU">ru-RU/ru-RU.plg_search_kunena.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_search_kunena.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.plg_search_kunena.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_search_kunena.ini</language>
		<language tag="tr-TR">tr-TR/tr-TR.plg_search_kunena.ini</language>
		<language tag="ug-CN">ug-CN/ug-CN.plg_search_kunena.ini</language>
		<language tag="vi-VN">vi-VN/vi-VN.plg_search_kunena.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" size="5" default="50" label="PLG_SEARCH_KUNENA_PARAM_SEARCH_LIMIT" description="PLG_SEARCH_KUNENA_PARAM_SEARCH_LIMIT_DESC"/>
				<field name="content_limit" type="text" size="5" default="40" label="PLG_SEARCH_KUNENA_PARAM_CONTENT_LIMIT" description="PLG_SEARCH_KUNENA_PARAM_CONTENT_LIMIT_DESC"/>
				<field name="show_bbcode" type="radio" default="1" label="PLG_SEARCH_KUNENA_PARAM_SHOW_BBCODE" description="PLG_SEARCH_KUNENA_PARAM_SHOW_BBCODE_DESC">
					<option value="0">PLG_SEARCH_KUNENA_OPTION_NO</option>
					<option value="1">PLG_SEARCH_KUNENA_OPTION_YES</option>
				</field>
				<field name="open_new_page" type="radio" default="1" label="PLG_SEARCH_KUNENA_PARAM_OPEN_NEWPAGE" description="PLG_SEARCH_KUNENA_PARAM_OPEN_NEWPAGE_DESC">
					<option value="0">PLG_SEARCH_KUNENA_OPTION_NO</option>
					<option value="1">PLG_SEARCH_KUNENA_OPTION_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
