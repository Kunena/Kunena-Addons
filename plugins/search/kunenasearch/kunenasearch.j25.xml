<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="1.6.0" type="plugin" group="search" method="upgrade">
	<name>plg_search_kunenasearch</name>
	<version>@kunenaversion@</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<build>@kunenaversionbuild@</build>
	<author>Kunena Team</author>
	<authorEmail>admin@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(c)2010-2012 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<description>PLG_KUNENASEARCH_DESCRIPTION</description>

	<scriptfile>install.script.php</scriptfile>
	<files>
		<filename plugin="kunenasearch">kunenasearch.php</filename>
	</files>

	<languages folder="language">
		<!-- Transifex alphabetical order -->
		<language tag="en-GB">en-GB/en-GB.plg_search_kunenasearch.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_kunenasearch.sys.ini</language>
		<language tag="bs-BA">bs-BA/bs-BA.plg_search_kunenasearch.ini</language>
		<language tag="bg-BG">bg-BG/bg-BG.plg_search_kunenasearch.ini</language>
		<language tag="ca-ES">ca-ES/ca-ES.plg_search_kunenasearch.ini</language>
		<language tag="zh-CN">zh-CN/zh-CN.plg_search_kunenasearch.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.plg_search_kunenasearch.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_search_kunenasearch.ini</language>
		<language tag="et-EE">et-EE/et-EE.plg_search_kunenasearch.ini</language>
		<language tag="fi-FI">fi-FI/fi-FI.plg_search_kunenasearch.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_search_kunenasearch.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_search_kunenasearch.ini</language>
		<language tag="el-GR">el-GR/el-GR.plg_search_kunenasearch.ini</language>
		<language tag="he-IL">he-IL/he-IL.plg_search_kunenasearch.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_search_kunenasearch.ini</language>
		<language tag="kz-KZ">kz-KZ/kz-KZ.plg_search_kunenasearch.ini</language>
		<language tag="lt-LT">lt-LT/lt-LT.plg_search_kunenasearch.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.plg_search_kunenasearch.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_search_kunenasearch.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_search_kunenasearch.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_search_kunenasearch.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" size="5" default="50" label="PLG_KUNENASEARCH_PARAM_SEARCH_LIMIT" description="PLG_KUNENASEARCH_PARAM_SEARCH_LIMIT_DESC"/>
				<field name="content_limit" type="text" size="5" default="40" label="PLG_KUNENASEARCH_PARAM_CONTENT_LIMIT" description="PLG_KUNENASEARCH_PARAM_CONTENT_LIMIT_DESC"/>
				<field name="show_bbcode" type="radio" default="1" label="PLG_KUNENASEARCH_PARAM_SHOW_BBCODE" description="PLG_KUNENASEARCH_PARAM_SHOW_BBCODE_DESC">
					<option value="0">PLG_KUNENASEARCH_OPTION_NO</option>
					<option value="1">PLG_KUNENASEARCH_OPTION_YES</option>
				</field>
				<field name="open_new_page" type="radio" default="1" label="PLG_KUNENASEARCH_PARAM_OPEN_NEWPAGE" description="PLG_KUNENASEARCH_PARAM_OPEN_NEWPAGE_DESC">
					<option value="0">PLG_KUNENASEARCH_OPTION_NO</option>
					<option value="1">PLG_KUNENASEARCH_OPTION_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>