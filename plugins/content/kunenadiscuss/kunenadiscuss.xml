		<language tag="zh-CN">zh-CN/zh-CN.plg_content_kunenadiscuss.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.plg_content_kunenadiscuss.ini</language>
		<language tag="cs-CZ">cs-CZ/cs-CZ.plg_content_kunenadiscuss.ini</language>
		<language tag="da-DK">da-DK/da-DK.plg_content_kunenadiscuss.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_content_kunenadiscuss.ini</language>
		<language tag="eo-XX">eo-XX/eo-XX.plg_content_kunenadiscuss.ini</language>
		<language tag="et-EE">et-EE/et-EE.plg_content_kunenadiscuss.ini</language>
		<language tag="fi-FI">fi-FI/fi-FI.plg_content_kunenadiscuss.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_content_kunenadiscuss.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_content_kunenadiscuss.ini</language>
